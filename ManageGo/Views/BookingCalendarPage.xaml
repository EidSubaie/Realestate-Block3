                    <StackLayout Orientation="Horizontal" Margin="0,0,0,1" HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <StackLayout x:Name="A290" Orientation="Horizontal"  HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <BoxView HeightRequest=".5"  VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                </StackLayout>

                <Label Text="5:00am"  Grid.Row="5" Grid.Column="1" Margin="0,-8,0,0" FontSize="Small"  TextColor="{StaticResource Grey-Mid-1}" />
                <StackLayout x:Name="A320" Grid.Row="5" Grid.Column="2" Spacing="0" Margin="0,0,0,0">
                    <BoxView  HeightRequest=".5" VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                    <StackLayout Orientation="Horizontal" Margin="0,0,0,1" HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <StackLayout x:Name="A350" Orientation="Horizontal"  HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <BoxView HeightRequest=".5"  VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                </StackLayout>


                <Label Text="6:00am"  Grid.Row="6" Grid.Column="1" Margin="0,-8,0,0" FontSize="Small"  TextColor="{StaticResource Grey-Mid-1}" />
                <StackLayout Grid.Row="6" Grid.Column="2" Spacing="0" Margin="0,0,0,0">
                    <BoxView  HeightRequest=".5" VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                    <StackLayout x:Name="A380" Orientation="Horizontal" Margin="0,0,0,1" HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <StackLayout x:Name="A410" Orientation="Horizontal"  HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <BoxView HeightRequest=".5"  VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                </StackLayout>

                <Label Text="7:00am"  Grid.Row="7" Grid.Column="1" Margin="0,-8,0,0" FontSize="Small"  TextColor="{StaticResource Grey-Mid-1}" />
                <StackLayout Grid.Row="7" Grid.Column="2" Spacing="0" Margin="0,0,0,0">
                    <BoxView  HeightRequest=".5" VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                    <StackLayout x:Name="A440" Orientation="Horizontal" Margin="0,0,0,1" HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <StackLayout x:Name="A470" Orientation="Horizontal"  HeightRequest="25" BackgroundColor="#f8f9fa">
