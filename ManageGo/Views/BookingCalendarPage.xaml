                    </StackLayout>
                    <BoxView HeightRequest=".5"  VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                </StackLayout>

                <Label Text="3:00pm"   Grid.Row="15" Grid.Column="1" Margin="0,-8,0,0" FontSize="Small"  TextColor="{StaticResource Grey-Mid-1}" />
                <StackLayout Grid.Row="15" Grid.Column="2" Spacing="0" Margin="0,0,0,0">
                    <BoxView  HeightRequest=".5" VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                    <StackLayout x:Name="A900" Orientation="Horizontal" Margin="0,0,0,1" HeightRequest="25" BackgroundColor="#f8f9fa">
