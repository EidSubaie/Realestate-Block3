                    </StackLayout>
                    <BoxView HeightRequest=".5"  VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                </StackLayout>

                <Label Text="8:00am" x:Name="StartingScrollPosition"  Grid.Row="8" Grid.Column="1" Margin="0,-8,0,0" FontSize="Small"  TextColor="{StaticResource Grey-Mid-1}" />
                <StackLayout Grid.Row="8" Grid.Column="2" Spacing="0" Margin="0,0,0,0">
                    <BoxView  HeightRequest=".5" VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                    <StackLayout x:Name="A490" Orientation="Horizontal" Margin="0,0,0,1" HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <StackLayout x:Name="A520" Orientation="Horizontal"  HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <BoxView HeightRequest=".5"  VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                </StackLayout>


                <Label Text="9:00am"  Grid.Row="9" Grid.Column="1" Margin="0,-8,0,0" FontSize="Small"  TextColor="{StaticResource Grey-Mid-1}" />
                <StackLayout Grid.Row="9" Grid.Column="2" Spacing="0" Margin="0,0,0,0">
                    <BoxView  HeightRequest=".5" VerticalOptions="Start" BackgroundColor="{StaticResource Grey-Light-1}" Opacity=".5" />
                    <StackLayout x:Name="A550" Orientation="Horizontal" Margin="0,0,0,1" HeightRequest="25" BackgroundColor="#f8f9fa">
                        <BoxView WidthRequest="3" HorizontalOptions="Start" />
                    </StackLayout>
                    <StackLayout x:Name="A580" Orientation="Horizontal"  HeightRequest="25" BackgroundColor="#f8f9fa">
