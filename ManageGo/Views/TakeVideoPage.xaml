<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:local="clr-namespace:ManageGo"
              xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="true"
             BackgroundColor="Black"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ManageGo.TakeVideoPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="CANCEL" Command="{Binding OnCancelTapped}"/>
        <ToolbarItem Text="{Binding ToggleButtonText}" Command="{Binding OnModeToggleTapped}"/>
    </ContentPage.ToolbarItems>
    
    
    <ContentPage.Content>
         <ContentView Grid.Row="0" Content="{Binding CameraPreviewContent}" HorizontalOptions="FillAndExpand" 
                                 VerticalOptions="FillAndExpand" BackgroundColor="Black" />
    </ContentPage.Content>
</ContentPage>
